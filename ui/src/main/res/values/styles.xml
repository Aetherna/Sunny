<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLabel</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ErrorMessage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_error_message</item>
        <item name="android:textColor">@color/colorDelete</item>
    </style>

    <style name="LocationLabel">
        <item name="android:textSize">@dimen/text_size_location_label</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LocationDetails">
        <item name="android:textSize">@dimen/text_size_location_detail</item>
        <item name="android:textColor">@color/colorDetail</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/button_text_color_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <style name="ButtonMainAction" parent="Button">
        <item name="android:background">@drawable/main_action_button_bg_selector</item>
    </style>

    <style name="ButtonSecondaryAction" parent="Button">
        <item name="android:background">@drawable/second_action_button_bg_selector</item>
    </style>

    <style name="ButtonDelete" parent="Button">
        <item name="android:background">@drawable/button_delete</item>
        <item name="android:contentDescription">@string/delete</item>
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

</resources>
