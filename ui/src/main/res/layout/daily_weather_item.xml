<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding">

    <TextView
        android:id="@+id/day_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/day_temp"
        android:layout_toStartOf="@+id/day_temp" />


    <TextView
        android:id="@+id/day_temp"
        style="@style/TextViewDayTemperature"
        android:layout_toLeftOf="@+id/night_temp"
        android:layout_toStartOf="@+id/night_temp"
        android:gravity="right" />

    <TextView
        android:id="@+id/night_temp"
        style="@style/TextViewNightTemperature"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="right" />


</RelativeLayout>